<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/layout1"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.adara.yashsd.kadmus.Main2Activity">

    <!-- <View
        android:id="@+id/backView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"/> -->

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.FloatingActionButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/ic_kadmus"
            android:id="@+id/fabFive"
            android:elevation="6dp"
            app:pressedTranslationZ="12dp"
            />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="140dp"
            android:src="@drawable/ic_kadmus_function_add_picture"
            android:id="@+id/fabSix"
            android:elevation="6dp"
            app:pressedTranslationZ="12dp"
            />

        <!--<android.support.design.widget.FloatingActionButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="200dp"
            android:src="@drawable/ic_kadmus_function_scribble"
            android:id="@+id/fabSeven"
            android:elevation="6dp"
            app:pressedTranslationZ="12dp"
            /> -->

        <android.support.design.widget.FloatingActionButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="80dp"
            android:src="@drawable/ic_kadmus_function_save"
            android:id="@+id/fabEight"
            android:elevation="6dp"
            app:pressedTranslationZ="12dp"
            />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="200dp"
            android:src="@drawable/ic_kadmus_function_hashtag"
            android:id="@+id/fabnine"
            android:elevation="6dp"
            app:pressedTranslationZ="12dp"
            />

        <!-- <android.support.design.widget.FloatingActionButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="260dp"
            android:src="@drawable/ic_kadmus_function_day_night_toggle"
            android:id="@+id/fabten"
